<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FlatCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/items1"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cart_item_image"
        android:layout_toRightOf="@+id/cart_item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_title"
            style="@style/textTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Title of the item" />


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_item_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_item_qty"
                style="@style/textSubtitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity" />

            <TextView
                android:id="@+id/cart_item_total"
                style="@style/textSubtitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cart_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layout"
                android:background="@color/selector_icons_cart"
                android:padding="@dimen/padding"
                android:src="@mipmap/ic_delete_black_24dp"
                android:tint="@color/active_icons"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/cart_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cart_delete_btn"
                android:background="@color/selector_icons_cart"
                android:layout_below="@+id/layout"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_toRightOf="@+id/cart_delete_btn"
                android:padding="@dimen/padding"
                android:src="@mipmap/ic_mode_edit_black_24dp"
                android:tint="@color/active_icons"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
