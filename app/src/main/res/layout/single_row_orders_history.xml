<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FlatCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/textTitleStyle"
            android:layout_gravity="center"
            android:textColor="@color/colorTextPrimaryLight"
            android:text="ORDER" />

        <TextView
            android:id="@+id/orders_history_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/bigTextTitle"
            android:layout_gravity="center"
            android:textColor="@color/colorTextPrimaryLight"
            android:text="0" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/orders_history_numb"
        android:layout_toRightOf="@+id/orders_history_numb"
        android:background="@color/gray"
        android:layout_marginLeft="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/full_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/textTitleStyle"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTextPrimaryLight"
            android:text="12 DECEMBRE 2015" />

        <TextView
            android:id="@+id/pretty_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:layout_marginLeft="@dimen/margin"
            android:textColor="@color/colorTextPrimaryLight"
            android:text="A MINUTE AGO"
            android:layout_marginTop="15dp"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

</LinearLayout>
